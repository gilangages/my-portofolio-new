{
    "openapi": "3.0.3",
    "info": {
        "title": "Contact API",
        "description": "Manajemen Kontak & Sosmed.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/contacts": {
            "get": {
                "summary": "List Contacts (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "platform_name": "LinkedIn",
                                        "url": "https://www.linkedin.com/in/abdian",
                                        "icon": "contacts/linkedin.svg",
                                        "created_at": "2025-01-10T08:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "platform_name": "Instagram",
                                        "url": "https://www.instagram.com/abdian_dev",
                                        "icon": "contacts/instagram.png",
                                        "created_at": "2025-01-12T09:30:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Contact (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "platform_name",
                                    "url"
                                ],
                                "properties": {
                                    "platform_name": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "example": "Discord"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://discord.gg/abdian"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "File gambar (svg, png, jpg, webp). Max 1MB."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Contact created",
                                    "data": {
                                        "id": 4,
                                        "platform_name": "Discord",
                                        "url": "https://discord.gg/abdian",
                                        "icon": "contacts/discord.svg",
                                        "created_at": "2025-02-08T10:00:00.000000Z"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The url field must be a valid URL.",
                                    "errors": {
                                        "url": [
                                            "The url field must be a valid URL."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/contacts/{id}": {
            "get": {
                "summary": "Get Single Contact (Detail)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "platform_name": "LinkedIn",
                                    "url": "https://www.linkedin.com/in/abdian",
                                    "icon": "contacts/linkedin.svg",
                                    "created_at": "2025-01-10T08:00:00.000000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Contact] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Contact (üîí Admin Only)",
                "description": "Update data contact. \n\n**Note:** Karena keterbatasan PHP dengan method `PUT` pada `multipart/form-data`, Frontend disarankan menggunakan method `POST` dengan tambahan field `_method` = `PUT`.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "platform_name",
                                    "url"
                                ],
                                "properties": {
                                    "platform_name": {
                                        "type": "string",
                                        "maxLength": 50,
                                        "example": "LinkedIn Pro"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://linkedin.com/in/abdian-new-profile"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Optional: Upload icon baru jika ingin mengganti"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Contact updated",
                                    "data": {
                                        "id": 1,
                                        "platform_name": "LinkedIn Pro",
                                        "url": "https://linkedin.com/in/abdian-new-profile",
                                        "icon": "contacts/new-linkedin-icon.svg"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The platform name field is required.",
                                    "errors": {
                                        "platform_name": [
                                            "The platform name field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Contact] 99"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Contact (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Contact deleted"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Contact] 99"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}