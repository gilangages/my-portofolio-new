{
    "openapi": "3.0.3",
    "info": {
        "title": "Profile API",
        "description": "API untuk Data Diri & Social Media Links.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/profile": {
            "get": {
                "summary": "Get Full Profile & Socials (üåç Global/Public)",
                "description": "Mengambil object 'about' (data diri) DAN array 'social_media' (kontak) sekaligus.",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "about": {
                                            "type": "object",
                                            "description": "Data Profile Singleton"
                                        },
                                        "social_media": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            },
                                            "description": "List semua sosmed dari tabel contacts"
                                        }
                                    }
                                },
                                "example": {
                                    "about": {
                                        "id": 1,
                                        "name": "Abdian",
                                        "job_title": "Fullstack Developer (Laravel & Vue)",
                                        "about_description": "Saya adalah pengembang web yang berfokus pada backend...",
                                        "photo_path": "profile/my-photo.jpg",
                                        "cv_path": "cv/my-cv-2025.pdf",
                                        "created_at": "2025-01-01T00:00:00.000000Z",
                                        "updated_at": "2025-02-01T10:00:00.000000Z"
                                    },
                                    "social_media": [
                                        {
                                            "id": 1,
                                            "platform_name": "GitHub",
                                            "url": "https://github.com/abdian",
                                            "icon_path": "contacts/github-icon.svg",
                                            "created_at": "..."
                                        },
                                        {
                                            "id": 2,
                                            "platform_name": "LinkedIn",
                                            "url": "https://linkedin.com/in/abdian",
                                            "icon_path": "contacts/linkedin-icon.svg",
                                            "created_at": "..."
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Save/Update Profile (üîí Admin Only)",
                "description": "Satu endpoint untuk Membuat ATAU Mengupdate data diri (Singleton). Menggunakan POST agar support upload file (Multipart).",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Abdian Update"
                                    },
                                    "job_title": {
                                        "type": "string",
                                        "example": "Senior Backend"
                                    },
                                    "about_description": {
                                        "type": "string",
                                        "example": "Deskripsi baru..."
                                    },
                                    "photo": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "File gambar (jpg, png)"
                                    },
                                    "cv": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "File dokumen (pdf)"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profile Saved/Updated Successfully",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Profile updated",
                                    "data": {
                                        "id": 1,
                                        "name": "Abdian Update",
                                        "job_title": "Senior Backend",
                                        "about_description": "Deskripsi baru...",
                                        "photo_path": "profile/hashname.jpg",
                                        "cv_path": "cv/hashname.pdf",
                                        "updated_at": "2025-02-08T10:00:00.000000Z"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The given data was invalid.",
                                    "errors": {
                                        "photo": [
                                            "The photo field must be an image."
                                        ],
                                        "cv": [
                                            "The cv field must be a file of type: pdf."
                                        ]
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}