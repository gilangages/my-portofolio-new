{
    "openapi": "3.0.3",
    "info": {
        "title": "Certificate API",
        "description": "Manajemen Sertifikat.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/certificates": {
            "get": {
                "summary": "List Certificates (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "title": "AWS Certified Solutions Architect",
                                        "issuer": "Amazon Web Services",
                                        "description": "Validates the ability to design distributed systems on AWS.",
                                        "image_path": "certificates/aws-architect.jpg",
                                        "credential_link": "https://aws.amazon.com/verification",
                                        "created_at": "2025-01-15T10:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "title": "Laravel Certified Developer",
                                        "issuer": "Laravel",
                                        "description": "Official certification for Laravel framework mastery.",
                                        "image_path": "certificates/laravel-cert.jpg",
                                        "credential_link": "https://laravel.com/cert",
                                        "created_at": "2025-02-20T12:00:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Certificate (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "issuer",
                                    "description",
                                    "image"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Google Cloud Engineer"
                                    },
                                    "issuer": {
                                        "type": "string",
                                        "example": "Google"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Associate Cloud Engineer certification."
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "File gambar (jpeg, png, jpg, webp). Max 2MB."
                                    },
                                    "credential_link": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://google.com/cert"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Certificate created",
                                    "data": {
                                        "id": 3,
                                        "title": "Google Cloud Engineer",
                                        "issuer": "Google",
                                        "image_path": "certificates/gcp-engineer.jpg"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The image field is required.",
                                    "errors": {
                                        "image": [
                                            "The image field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/certificates/{id}": {
            "get": {
                "summary": "Get Single Certificate (Detail)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "title": "AWS Certified Solutions Architect",
                                    "issuer": "Amazon Web Services",
                                    "description": "Validates the ability to design distributed systems on AWS.",
                                    "image_path": "certificates/aws-architect.jpg",
                                    "credential_link": "https://aws.amazon.com/verification",
                                    "created_at": "2025-01-15T10:00:00.000000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Certificate] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Certificate (üîí Admin Only)",
                "description": "Update data sertifikat. \n\n**Note:** Karena keterbatasan PHP dengan method `PUT` pada `multipart/form-data`, Frontend disarankan menggunakan method `POST` dengan tambahan field `_method` = `PUT`.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "issuer",
                                    "description"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "AWS Certified Solutions Architect - Professional"
                                    },
                                    "issuer": {
                                        "type": "string",
                                        "example": "Amazon Web Services"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Professional level certification."
                                    },
                                    "image": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Optional: Upload file baru jika ingin mengganti gambar"
                                    },
                                    "credential_link": {
                                        "type": "string",
                                        "format": "url",
                                        "example": "https://aws.amazon.com/verification"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Certificate updated",
                                    "data": {
                                        "id": 1,
                                        "title": "AWS Certified Solutions Architect - Professional",
                                        "image_path": "certificates/new-image.jpg"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The title field is required.",
                                    "errors": {
                                        "title": [
                                            "The title field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Certificate] 99"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Certificate (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Certificate deleted"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Certificate] 99"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}