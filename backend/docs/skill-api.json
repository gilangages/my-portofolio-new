{
    "openapi": "3.0.3",
    "info": {
        "title": "Skill API",
        "description": "Manajemen Tech Stack (Skills).",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/skills": {
            "get": {
                "summary": "List Skills (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "identifier": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            },
                                            "updated_at": {
                                                "type": "string",
                                                "format": "date-time"
                                            }
                                        }
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "name": "Laravel",
                                        "identifier": "simple-icons:laravel",
                                        "created_at": "2025-01-10T10:00:00.000000Z",
                                        "updated_at": "2025-01-10T10:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "name": "Vue.js",
                                        "identifier": "simple-icons:vuedotjs",
                                        "created_at": "2025-01-10T10:05:00.000000Z",
                                        "updated_at": "2025-01-10T10:05:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "identifier"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "React.js"
                                    },
                                    "identifier": {
                                        "type": "string",
                                        "description": "Kode icon dari icon set (misal: simple-icons:react)",
                                        "example": "simple-icons:react"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill created successfully",
                                    "data": {
                                        "id": 4,
                                        "name": "React.js",
                                        "identifier": "simple-icons:react",
                                        "updated_at": "2025-02-08T10:00:00.000000Z",
                                        "created_at": "2025-02-08T10:00:00.000000Z"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The identifier field is required.",
                                    "errors": {
                                        "identifier": [
                                            "The identifier field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/skills/{id}": {
            "get": {
                "summary": "Get Single Skill (Detail)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "name": "Laravel",
                                    "identifier": "simple-icons:laravel",
                                    "created_at": "2025-01-10T10:00:00.000000Z",
                                    "updated_at": "2025-01-10T10:00:00.000000Z"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Skill] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "identifier"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "React Native"
                                    },
                                    "identifier": {
                                        "type": "string",
                                        "example": "simple-icons:react"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill updated",
                                    "data": {
                                        "id": 4,
                                        "name": "React Native",
                                        "identifier": "simple-icons:react",
                                        "created_at": "2025-02-08T10:00:00.000000Z",
                                        "updated_at": "2025-02-08T10:15:00.000000Z"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The name field is required.",
                                    "errors": {
                                        "name": [
                                            "The name field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Skill] 99"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill deleted"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Skill] 99"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}