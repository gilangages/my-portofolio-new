{
    "openapi": "3.0.3",
    "info": {
        "title": "Skill API",
        "description": "Manajemen Tech Stack.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/skills": {
            "get": {
                "summary": "List Skills (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "name": "Laravel",
                                        "icon_path": "skills/laravel.svg",
                                        "category": "Backend",
                                        "created_at": "2025-01-10T10:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "name": "Vue.js",
                                        "icon_path": "skills/vue.svg",
                                        "category": "Frontend",
                                        "created_at": "2025-01-10T10:05:00.000000Z"
                                    },
                                    {
                                        "id": 3,
                                        "name": "Docker",
                                        "icon_path": "skills/docker.svg",
                                        "category": "DevOps",
                                        "created_at": "2025-01-15T12:00:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "React.js"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "format": "binary"
                                    },
                                    "category": {
                                        "type": "string",
                                        "example": "Frontend"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill created",
                                    "data": {
                                        "id": 4,
                                        "name": "React.js",
                                        "icon_path": "skills/react.svg",
                                        "category": "Frontend"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/skills/{id}": {
            "put": {
                "summary": "Update Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "React Native"
                                    },
                                    "icon": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Optional: Upload file baru jika ganti icon"
                                    },
                                    "category": {
                                        "type": "string",
                                        "example": "Mobile"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill updated",
                                    "data": {
                                        "id": 4,
                                        "name": "React Native",
                                        "icon_path": "skills/react-native.svg",
                                        "category": "Mobile"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Skill (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Skill deleted"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
