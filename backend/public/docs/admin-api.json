{
    "openapi": "3.0.3",
    "info": {
        "title": "Admin Auth API",
        "description": "API untuk Login/Logout Admin.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/admin/login": {
            "post": {
                "summary": "Admin Login (Public)",
                "description": "Mendapatkan token akses.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "admin@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string",
                                            "example": "1|AbCd..."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/admin/logout": {
            "delete": {
                "summary": "Admin Logout (ðŸ”’ Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Logged out successfully"
                    }
                }
            }
        }
    }
}
