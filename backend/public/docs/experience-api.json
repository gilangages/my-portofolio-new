{
    "openapi": "3.0.3",
    "info": {
        "title": "Experience API",
        "description": "Manajemen Pengalaman Kerja.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/experiences": {
            "get": {
                "summary": "List Experiences (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "company_name": "Google",
                                        "role": "Software Engineer",
                                        "status": "Full-time",
                                        "start_date": "2023-01-01",
                                        "end_date": "2024-01-01",
                                        "description": "Developing scalable web applications using Go and React.",
                                        "created_at": "2024-01-01T10:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "company_name": "Freelance Corp",
                                        "role": "Frontend Developer",
                                        "status": "Freelance",
                                        "start_date": "2022-05-01",
                                        "end_date": null,
                                        "description": "Building landing pages for various clients.",
                                        "created_at": "2024-01-02T10:00:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Experience (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "company_name",
                                    "role",
                                    "status",
                                    "start_date",
                                    "description"
                                ],
                                "properties": {
                                    "company_name": {
                                        "type": "string",
                                        "example": "Tokopedia"
                                    },
                                    "role": {
                                        "type": "string",
                                        "example": "Backend Engineer"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "Full-time",
                                            "Part-time",
                                            "Freelance",
                                            "Internship"
                                        ],
                                        "example": "Full-time"
                                    },
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-01-01"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "nullable": true,
                                        "description": "Kosongkan jika masih bekerja (Present)",
                                        "example": null
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Responsible for API development and maintenance."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Experience created",
                                    "data": {
                                        "id": 3,
                                        "company_name": "Tokopedia",
                                        "role": "Backend Engineer",
                                        "status": "Full-time",
                                        "start_date": "2024-01-01",
                                        "end_date": null,
                                        "description": "Responsible for API development and maintenance."
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The end date must be a date after or equal to start date.",
                                    "errors": {
                                        "end_date": [
                                            "The end date must be a date after or equal to start date."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/experiences/{id}": {
            "get": {
                "summary": "Get Single Experience (üåç Global/Public)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "company_name": "Google",
                                    "role": "Software Engineer",
                                    "status": "Full-time",
                                    "start_date": "2023-01-01",
                                    "end_date": "2024-01-01",
                                    "description": "Detailed description..."
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Experience] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Experience (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "company_name",
                                    "role",
                                    "status",
                                    "start_date",
                                    "description"
                                ],
                                "properties": {
                                    "company_name": {
                                        "type": "string",
                                        "example": "Tokopedia Updated"
                                    },
                                    "role": {
                                        "type": "string",
                                        "example": "Senior Backend Engineer"
                                    },
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "Full-time",
                                            "Part-time",
                                            "Freelance",
                                            "Internship"
                                        ],
                                        "example": "Full-time"
                                    },
                                    "start_date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2024-01-01"
                                    },
                                    "end_date": {
                                        "type": "string",
                                        "format": "date",
                                        "nullable": true,
                                        "example": "2025-01-01"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Updated description..."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Experience updated",
                                    "data": {
                                        "id": 3,
                                        "company_name": "Tokopedia Updated",
                                        "role": "Senior Backend Engineer",
                                        "status": "Full-time",
                                        "end_date": "2025-01-01"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The company name field is required.",
                                    "errors": {
                                        "company_name": [
                                            "The company name field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Experience] 99"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Experience (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Experience deleted"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Experience] 99"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}