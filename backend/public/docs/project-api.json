{
    "openapi": "3.0.3",
    "info": {
        "title": "Project API",
        "description": "Manajemen Project Portfolio.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/projects": {
            "get": {
                "summary": "List All Projects (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "title": "E-Commerce Luma",
                                        "description": "A full-stack e-commerce application built with Laravel and Vue.js.",
                                        "thumbnail_path": "projects/luma-thumbnail.jpg",
                                        "live_demo_link": "https://luma.abdian.dev",
                                        "repository_link": "https://github.com/abdian/luma",
                                        "created_at": "2025-01-10T08:00:00.000000Z",
                                        "skills": [
                                            {
                                                "id": 1,
                                                "name": "Laravel",
                                                "identifier": "simple-icons:laravel"
                                            },
                                            {
                                                "id": 2,
                                                "name": "Vue.js",
                                                "identifier": "simple-icons:vuedotjs"
                                            }
                                        ]
                                    },
                                    {
                                        "id": 2,
                                        "title": "Personal Portfolio",
                                        "description": "My personal portfolio website to showcase my projects.",
                                        "thumbnail_path": "projects/portfolio.jpg",
                                        "live_demo_link": "https://abdian.dev",
                                        "repository_link": "https://github.com/abdian/portfolio",
                                        "created_at": "2025-02-01T10:00:00.000000Z",
                                        "skills": [
                                            {
                                                "id": 2,
                                                "name": "Vue.js",
                                                "identifier": "simple-icons:vuedotjs"
                                            },
                                            {
                                                "id": 3,
                                                "name": "Tailwind CSS",
                                                "identifier": "simple-icons:tailwindcss"
                                            }
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Project (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "description",
                                    "thumbnail",
                                    "tech_stack_ids[]"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "New Zenith App"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Security logging system for university project."
                                    },
                                    "thumbnail": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Gambar thumbnail project (jpg/png)"
                                    },
                                    "live_demo_link": {
                                        "type": "string",
                                        "example": "https://zenith.app"
                                    },
                                    "repository_link": {
                                        "type": "string",
                                        "example": "https://github.com/abdian/zenith"
                                    },
                                    "tech_stack_ids[]": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "description": "Array ID dari skill yang digunakan",
                                        "example": [
                                            1,
                                            3,
                                            5
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Project created",
                                    "data": {
                                        "id": 3,
                                        "title": "New Zenith App",
                                        "thumbnail_path": "projects/hashname.jpg",
                                        "skills": [
                                            {
                                                "id": 1,
                                                "name": "Laravel"
                                            },
                                            {
                                                "id": 3,
                                                "name": "MySQL"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The title field is required.",
                                    "errors": {
                                        "title": [
                                            "The title field is required."
                                        ],
                                        "thumbnail": [
                                            "The thumbnail must be an image."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/projects/{id}": {
            "get": {
                "summary": "Get Single Project (üåç Global/Public)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "title": "E-Commerce Luma",
                                    "description": "Detailed description...",
                                    "thumbnail_path": "projects/luma.jpg",
                                    "skills": [
                                        {
                                            "id": 1,
                                            "name": "Laravel",
                                            "identifier": "simple-icons:laravel"
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Project] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Project (üîí Admin Only)",
                "description": "Update data project. \n\n**Note:** Karena keterbatasan PHP dengan method `PUT` pada `multipart/form-data`, Frontend disarankan menggunakan method `POST` dengan tambahan field `_method` = `PUT`.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "description",
                                    "tech_stack_ids[]"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "E-Commerce Luma V2"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Updated description..."
                                    },
                                    "thumbnail": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Optional: Upload file baru jika ingin mengganti thumbnail"
                                    },
                                    "live_demo_link": {
                                        "type": "string"
                                    },
                                    "repository_link": {
                                        "type": "string"
                                    },
                                    "tech_stack_ids[]": {
                                        "type": "array",
                                        "items": {
                                            "type": "integer"
                                        },
                                        "example": [
                                            1,
                                            2,
                                            4
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Project updated",
                                    "data": {
                                        "id": 1,
                                        "title": "E-Commerce Luma V2",
                                        "skills": [
                                            {
                                                "id": 1,
                                                "name": "Laravel"
                                            },
                                            {
                                                "id": 2,
                                                "name": "Vue.js"
                                            },
                                            {
                                                "id": 4,
                                                "name": "Docker"
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The description field is required.",
                                    "errors": {
                                        "description": [
                                            "The description field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Project] 99"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete Project (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Project deleted"
