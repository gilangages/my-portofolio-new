{
    "openapi": "3.0.3",
    "info": {
        "title": "Service API",
        "description": "Manajemen Layanan Jasa & Penawaran.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/services": {
            "get": {
                "summary": "List All Active Services (üåç Global/Public)",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                "example": [
                                    {
                                        "id": 1,
                                        "title": "Fullstack Web Dev",
                                        "description": "Membangun aplikasi web dari nol menggunakan Laravel & Vue.js.",
                                        "icon": "mdi:language-php",
                                        "price": "Negotiable",
                                        "cta_link": "https://wa.me/628123456789",
                                        "is_active": true,
                                        "created_at": "2025-01-10T08:00:00.000000Z"
                                    },
                                    {
                                        "id": 2,
                                        "title": "UI/UX Design",
                                        "description": "Desain antarmuka modern dengan pendekatan user-centric.",
                                        "icon": "mdi:figma",
                                        "price": "Mulai dari Rp500.000",
                                        "cta_link": "https://wa.me/628123456789",
                                        "is_active": true,
                                        "created_at": "2025-01-12T09:30:00.000000Z"
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create Service (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "description",
                                    "icon"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "SEO Optimization"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "Meningkatkan peringkat website di mesin pencari."
                                    },
                                    "icon": {
                                        "type": "string",
                                        "example": "mdi:google"
                                    },
                                    "price": {
                                        "type": "string",
                                        "example": "Fixed Price"
                                    },
                                    "cta_link": {
                                        "type": "string",
                                        "example": "https://wa.me/628123456789"
                                    },
                                    "is_active": {
                                        "type": "boolean",
                                        "example": true
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Service created",
                                    "data": {
                                        "id": 3,
                                        "title": "SEO Optimization",
                                        "icon": "mdi:google",
                                        "is_active": true,
                                        "created_at": "2025-02-08T10:00:00.000000Z"
                                    }
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "The title field is required.",
                                    "errors": {
                                        "title": [
                                            "The title field is required."
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Unauthenticated."
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/services/{id}": {
            "get": {
                "summary": "Get Single Service (Detail)",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "id": 1,
                                    "title": "Fullstack Web Dev",
                                    "description": "Detailed description here...",
                                    "icon": "mdi:language-php",
                                    "price": "Negotiable",
                                    "is_active": true
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "No query results for model [App\\Models\\Service] 99"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update Service (üîí Admin Only)",
                "description": "Update data service.",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "is_active": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "example": {
                                "title": "Fullstack Web Dev V2",
                                "is_active": false
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Updated",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Service updated",
                                    "data": {
                                        "id": 1,
                                        "title": "Fullstack Web Dev V2",
                                        "is_active": false
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            },
            "delete": {
                "summary": "Delete Service (üîí Admin Only)",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deleted",
                        "content": {
                            "application/json": {
                                "example": {
                                    "message": "Service deleted"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found"
                    }
                }
            }
        }
    }
}